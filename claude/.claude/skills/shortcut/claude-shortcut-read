#!/usr/bin/env python3
"""
Claude Shortcut Read - Minimal wrapper for read-only Shortcut operations.

This wrapper delegates to the main implementation in scripts/claude-shortcut-read.py
"""

import sys
from pathlib import Path

# Add scripts directory to path so we can import the implementation
scripts_dir = Path(__file__).parent / "scripts"
sys.path.insert(0, str(scripts_dir))

if __name__ == "__main__":
    from claude_shortcut_read import main
    main()
