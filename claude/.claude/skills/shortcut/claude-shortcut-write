#!/usr/bin/env python3
"""
Claude Shortcut Write - Minimal wrapper for write Shortcut operations.

This wrapper delegates to the main implementation in scripts/claude-shortcut-write.py
"""

import sys
from pathlib import Path

# Add scripts directory to path so we can import the implementation
scripts_dir = Path(__file__).parent / "scripts"
sys.path.insert(0, str(scripts_dir))

if __name__ == "__main__":
    from claude_shortcut_write import main
    main()
