[user]
	email = jbuckmccready@gmail.com
	name = Buck McCready

[core]
	editor = nvim

[init]
	defaultBranch = main

[interactive]
	diffFilter = delta --color-only

[merge]
	conflictstyle = diff3

[pull]
	rebase = true

[push]
	autoSetupRemote = true

[fetch]
	prune = true

[include]
	path = ~/.config/delta/themes/catppuccin.gitconfig

[delta]
	features = catppuccin-mocha
[gpg]
	format = ssh
[commit]
	gpgsign = true
[gpg "ssh"]
	allowedSignersFile = ~/.ssh/git_allowed_signers

[include]
	path = ~/.gitconfig.local
