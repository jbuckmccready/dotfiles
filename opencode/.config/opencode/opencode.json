{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "permission": {
    "edit": "allow",
    "webfetch": "ask",
    "bash": {
      "*": "ask",
      "pwd": "allow",
      "ls": "allow",
      "ls *": "allow",
      "git status": "allow",
      "git status *": "allow",
      "git diff": "allow",
      "git diff *": "allow",
      "git log": "allow",
      "git log *": "allow",
      "git describe": "allow",
      "git describe *": "allow",
      "rg *": "allow",
      "find *": "allow",
      "grep *": "allow",
      "awk *": "allow",
      "gh pr list *": "allow",
      "gh pr view *": "allow",
      "gh pr diff *": "allow"
    }
  }
}
