{
  "$schema": "https://opencode.ai/config.json",
  "theme": "catppuccin",
  "share": "disabled",
  "lsp": false,
  "formatter": false,
  "permission": {
    "edit": "allow",
    "webfetch": "ask",
    "bash": {
      "*": "ask",
      "pwd": "allow",
      "echo *": "allow",
      "ls": "allow",
      "ls *": "allow",
      "head *": "allow",
      "tail *": "allow",
      "git status": "allow",
      "git status *": "allow",
      "git diff": "allow",
      "git diff *": "allow",
      "git log": "allow",
      "git log *": "allow",
      "git describe": "allow",
      "git describe *": "allow",
      "git show": "allow",
      "git show *": "allow",
      "git rev-parse": "allow",
      "git rev-parse *": "allow",
      "git blame *": "allow",
      "git ls-files": "allow",
      "git ls-files *": "allow",
      "git shortlog": "allow",
      "git shortlog *": "allow",
      "git ls-remote": "allow",
      "git ls-remote *": "allow",
      "git stash list": "allow",
      "rg *": "allow",
      "find *": "allow",
      "grep *": "allow",
      "awk *": "allow",
      "wc *": "allow",
      "cut *": "allow",
      "cat *": "allow",
      "less *": "allow",
      "more *": "allow",
      "stat *": "allow",
      "du *": "allow",
      "df *": "allow",
      "file *": "allow",
      "md5 *": "allow",
      "shasum *": "allow",
      "sort *": "allow",
      "uniq *": "allow",
      "jq *": "allow",
      "gh pr list *": "allow",
      "gh pr view *": "allow",
      "gh pr diff *": "allow",
      "cargo check": "allow",
      "cargo check *": "allow",
      "cargo build": "allow",
      "cargo build *": "allow",
      "cargo clippy": "allow",
      "cargo clippy *": "allow",
      "cargo fmt": "allow",
      "cargo +nightly fmt": "allow",
      "kubectl get *": "allow",
      "kubectl describe *": "allow",
      "kubectl logs *": "allow",
      "kubectl top *": "allow",
      "kubectl explain *": "allow",
      "kubectl api-resources *": "allow",
      "kubectl api-versions *": "allow",
      "kubectl cluster-info *": "allow",
      "kubectl config view *": "allow",
      "kubectl config get-contexts *": "allow",
      "kubectl config current-context *": "allow",
      "kubectl version *": "allow",
      "kubectl auth can-i *": "allow",
      "kubectl diff *": "allow",
      "kubectl events *": "allow",
      "pyright": "allow",
      "ruff check --fix .": "allow",
      "ruff format .": "allow",
      "shortcut-api-read *": "allow"
    }
  },
  "provider": {
    "github-copilot": {
      "models": {
        "gpt-5.2": {
          "options": {
            "reasoningEffort": "medium",
            "textVerbosity": "low",
            "reasoningSummary": "auto",
            "include": ["reasoning.encrypted_content"]
          }
        },
        "gpt-5.2-xhigh": {
          "id": "gpt-5.2",
          "name": "GPT-5.2 xHigh",
          "options": {
            "reasoningEffort": "xhigh",
            "textVerbosity": "low",
            "reasoningSummary": "auto",
            "include": ["reasoning.encrypted_content"]
          }
        },
        "gpt-5.2-high": {
          "id": "gpt-5.2",
          "name": "GPT-5.2 High",
          "options": {
            "reasoningEffort": "high",
            "textVerbosity": "low",
            "reasoningSummary": "auto",
            "include": ["reasoning.encrypted_content"]
          }
        },
        "gpt-5.2-low": {
          "id": "gpt-5.2",
          "name": "GPT-5.2 Low",
          "options": {
            "reasoningEffort": "low",
            "textVerbosity": "low",
            "reasoningSummary": "auto",
            "include": ["reasoning.encrypted_content"]
          }
        }
      }
    },
    "anthropic": {
      "models": {
        "sonnet-4-5-ultra": {
          "id": "claude-sonnet-4-5",
          "name": "Claude Sonnet 4.5 Ultra",
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 32768
            }
          }
        },
        "sonnet-4-5-high": {
          "id": "claude-sonnet-4-5",
          "name": "Claude Sonnet 4.5 High",
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 8192
            }
          }
        },
        "sonnet-4-5-med": {
          "id": "claude-sonnet-4-5",
          "name": "Claude Sonnet 4.5 Medium",
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 4096
            }
          }
        },
        "sonnet-4-5-low": {
          "id": "claude-sonnet-4-5",
          "name": "Claude Sonnet 4.5 Low",
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 1024
            }
          }
        },
        "opus-4-5-ultra": {
          "id": "claude-opus-4-5",
          "name": "Claude Opus 4.5 Ultra",
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 32768
            }
          }
        },
        "opus-4-5-high": {
          "id": "claude-opus-4-5",
          "name": "Claude Opus 4.5 High",
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 8192
            }
          }
        },
        "opus-4-5-med": {
          "id": "claude-opus-4-5",
          "name": "Claude Opus 4.5 Medium",
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 4096
            }
          }
        },
        "opus-4-5-low": {
          "id": "claude-opus-4-5",
          "name": "Claude Opus 4.5 Low",
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 1024
            }
          }
        }
      }
    }
  }
}
