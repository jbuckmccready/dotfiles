{
  "$schema": "https://opencode.ai/config.json",
  "instructions": ["AGENTS.local.md"],
  "theme": "catppuccin",
  "share": "disabled",
  "lsp": false,
  "formatter": false,
  "plugin": ["opencode-antigravity-auth@beta"],
  "mcp": {
    "playwright": {
      "type": "local",
      "command": ["bunx", "@playwright/mcp@latest"],
      "enabled": false
    },
    "svelte": {
      "type": "local",
      "command": ["bunx", "-y", "@sveltejs/mcp"],
      "enabled": false
    }
  },
  "permission": {
    "edit": "allow",
    "webfetch": "ask",
    "bash": {
      "*": "ask",
      "pwd": "allow",
      "echo *": "allow",
      "ls": "allow",
      "ls *": "allow",
      "head *": "allow",
      "tail *": "allow",
      "git status": "allow",
      "git status *": "allow",
      "git diff": "allow",
      "git diff *": "allow",
      "git log": "allow",
      "git log *": "allow",
      "git describe": "allow",
      "git describe *": "allow",
      "git show": "allow",
      "git show *": "allow",
      "git rev-parse": "allow",
      "git rev-parse *": "allow",
      "git blame *": "allow",
      "git ls-files": "allow",
      "git ls-files *": "allow",
      "git shortlog": "allow",
      "git shortlog *": "allow",
      "git ls-remote": "allow",
      "git ls-remote *": "allow",
      "git stash list": "allow",
      "rg *": "allow",
      "find *": "allow",
      "grep *": "allow",
      "awk *": "allow",
      "wc": "allow",
      "wc *": "allow",
      "cut *": "allow",
      "cat": "allow",
      "cat *": "allow",
      "less *": "allow",
      "more *": "allow",
      "stat *": "allow",
      "du": "allow",
      "du *": "allow",
      "df": "allow",
      "df *": "allow",
      "file *": "allow",
      "md5 *": "allow",
      "shasum *": "allow",
      "sort": "allow",
      "sort *": "allow",
      "uniq": "allow",
      "uniq *": "allow",
      "jq *": "allow",
      "gh pr list *": "allow",
      "gh pr view *": "allow",
      "gh pr diff *": "allow",
      "cargo check": "allow",
      "cargo check *": "allow",
      "cargo build": "allow",
      "cargo build *": "allow",
      "cargo clippy": "allow",
      "cargo clippy *": "allow",
      "cargo fmt": "allow",
      "cargo +nightly fmt": "allow",
      "kubectl get *": "allow",
      "kubectl describe *": "allow",
      "kubectl logs *": "allow",
      "kubectl top *": "allow",
      "kubectl explain *": "allow",
      "kubectl api-resources *": "allow",
      "kubectl api-versions *": "allow",
      "kubectl cluster-info *": "allow",
      "kubectl config view *": "allow",
      "kubectl config get-contexts *": "allow",
      "kubectl config current-context *": "allow",
      "kubectl version *": "allow",
      "kubectl auth can-i *": "allow",
      "kubectl diff *": "allow",
      "kubectl events *": "allow",
      "pyright": "allow",
      "ruff check --fix .": "allow",
      "ruff format .": "allow",
      "shortcut-api-read *": "allow"
    }
  },
  "provider": {
    "github-copilot": {
      "models": {
        "gpt-5.2": {
          "options": {
            "reasoningEffort": "none"
          },
          "variants": {
            "low": {
              "reasoningEffort": "low",
              "textVerbosity": "low",
              "reasoningSummary": "auto",
              "include": ["reasoning.encrypted_content"]
            },
            "medium": {
              "reasoningEffort": "medium",
              "textVerbosity": "low",
              "reasoningSummary": "auto",
              "include": ["reasoning.encrypted_content"]
            },
            "high": {
              "reasoningEffort": "high",
              "textVerbosity": "low",
              "reasoningSummary": "auto",
              "include": ["reasoning.encrypted_content"]
            },
            "xhigh": {
              "reasoningEffort": "xhigh",
              "textVerbosity": "low",
              "reasoningSummary": "auto",
              "include": ["reasoning.encrypted_content"]
            }
          }
        }
      }
    },
    "google": {
      "models": {
        "antigravity-gemini-3-pro": {
          "name": "Gemini 3 Pro (Antigravity)",
          "limit": { "context": 1048576, "output": 65535 },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          },
          "variants": {
            "low": { "thinkingLevel": "low" },
            "high": { "thinkingLevel": "high" }
          }
        },
        "antigravity-gemini-3-flash": {
          "name": "Gemini 3 Flash (Antigravity)",
          "limit": { "context": 1048576, "output": 65536 },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          },
          "variants": {
            "minimal": { "thinkingLevel": "minimal" },
            "low": { "thinkingLevel": "low" },
            "medium": { "thinkingLevel": "medium" },
            "high": { "thinkingLevel": "high" }
          }
        },
        "antigravity-claude-sonnet-4-5": {
          "name": "Claude Sonnet 4.5 (Antigravity)",
          "limit": { "context": 200000, "output": 64000 },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          }
        },
        "antigravity-claude-sonnet-4-5-thinking": {
          "name": "Claude Sonnet 4.5 Thinking (Antigravity)",
          "limit": { "context": 200000, "output": 64000 },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          },
          "variants": {
            "low": { "thinkingConfig": { "thinkingBudget": 8192 } },
            "max": { "thinkingConfig": { "thinkingBudget": 32768 } }
          }
        },
        "antigravity-claude-opus-4-5-thinking": {
          "name": "Claude Opus 4.5 Thinking (Antigravity)",
          "limit": { "context": 200000, "output": 64000 },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          },
          "variants": {
            "low": { "thinkingConfig": { "thinkingBudget": 8192 } },
            "max": { "thinkingConfig": { "thinkingBudget": 32768 } }
          }
        },
        "gemini-2.5-flash": {
          "name": "Gemini 2.5 Flash (Gemini CLI)",
          "limit": { "context": 1048576, "output": 65536 },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          }
        },
        "gemini-2.5-pro": {
          "name": "Gemini 2.5 Pro (Gemini CLI)",
          "limit": { "context": 1048576, "output": 65536 },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          }
        },
        "gemini-3-flash-preview": {
          "name": "Gemini 3 Flash Preview (Gemini CLI)",
          "limit": { "context": 1048576, "output": 65536 },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          }
        },
        "gemini-3-pro-preview": {
          "name": "Gemini 3 Pro Preview (Gemini CLI)",
          "limit": { "context": 1048576, "output": 65535 },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          }
        }
      }
    }
  }
}
